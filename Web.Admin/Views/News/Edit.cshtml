<div>
    <div class="container" data-ng-controller="NewsController as vm">
        <div class="row clearfix">
            <h3>{{vm.Year}} News</h3>
            <ul class="list-group row">
                <li class="list-group-item col-xs-12" ng-repeat="newsItem in vm.News | orderBy: '-Created'">
                    <a ng-click="vm.DeleteNews(newsItem.Id)" class="pull-right"><i class="glyphicon glyphicon-trash"></i></a>
                    <h3>{{newsItem.Title}}</h3>
                    <pre>{{newsItem.Content}}</pre>                    
                </li>
            </ul>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="Title" class="col-md-2 control-label">Title</label>
                    <input class="col-md-10" type="text" id="Title" ng-model="vm.Title" required />
                </div>
                <div class="form-group">
                    <label for="Content" class="col-md-2 control-label">Content</label>
                    <textarea class="col-md-10" id="Content" ng-model="vm.Content" required></textarea>
                </div>
                <div class="form-group">
                    <a class="col-md-offset-2 ui-button btn btn-primary" ng-click="vm.SaveNews()">Save</a>
                </div>
            </form>
        </div>
    </div>
</div>